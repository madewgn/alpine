let s:so_save = &g:so | let s:siso_save = &g:siso | setg so=0 siso=0 | setl so=-1 siso=-1
argglobal
setlocal fdm=manual
setlocal fde=0
setlocal fmr={{{,}}}
setlocal fdi=#
setlocal fdl=99
setlocal fml=1
setlocal fdn=20
setlocal fen
silent! normal! zE
4,9fold
15,17fold
35,37fold
30,38fold
45,47fold
57,59fold
70,72fold
40,73fold
26,73fold
let &fdl = &fdl
let s:l = 21 - ((20 * winheight(0) + 25) / 51)
if s:l < 1 | let s:l = 1 | endif
keepjumps exe s:l
normal! zt
keepjumps 21
let s:c = 65 - ((49 * winwidth(0) + 32) / 64)
if s:c > 0
  exe 'normal! ' . s:c . '|zs' . 65 . '|'
else
  normal! 065|
endif
let &g:so = s:so_save | let &g:siso = s:siso_save
nohlsearch
